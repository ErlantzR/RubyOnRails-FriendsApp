<%= form_with(model: friend) do |form| %>
  <% if friend.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
        <% friend.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :first_name, class:"form-control", style:"margin-bottom:5px", placeholder:"First name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :last_name, class:"form-control", style:"margin-bottom:5px", placeholder:"Last name" %>
  </div>

  <div class="form-group">
    <%= form.text_field :email, class:"form-control", style:"margin-bottom:5px", placeholder:"Email" %>
  </div>

  <div class="form-group">
    <%= form.text_field :phone, class:"form-control", style:"margin-bottom:5px", placeholder:"Phone" %>
  </div>

  <div class="form-group">
    <%= form.text_field :twitter, class:"form-control", style:"margin-bottom:5px", placeholder:"Twitter" %>
  </div>

  <div class="form-group">
    <%= form.number_field :user_id, class:"form-control", id: :friend_user_id, value: current_user.id, type: :hidden %>
  </div>

  <div>
    <%= form.submit class:"btn btn-secondary" %>
  </div>
<% end %>
